<aside class="timeline">
    <h3>Timeline</h3>
    <ul>
        {%- for post in collections.post | reverse -%}
            <li>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
                <span>{{ post.data.date | date }}</span>
            </li>
        {%- endfor -%}
    </ul>
</aside>
